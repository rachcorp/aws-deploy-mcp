{
    "name": "aws-deploy-mcp",
    "version": "1.0.0",
    "description": "One-click deployment from GitHub to AWS Amplify via MCP (Model Context Protocol)",
    "bin": {
        "aws-deploy": "./bin/amplify-deploy.js"
    },
    "main": "src/index.js",
    "scripts": {
        "start": "node bin/amplify-deploy.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "build": "npm run clean && npm run compile",
        "clean": "rm -rf dist",
        "compile": "tsc",
        "lint": "eslint src/ bin/ --ext .js",
        "lint:fix": "eslint src/ bin/ --ext .js --fix",
        "prepublishOnly": "npm test && npm run build",
        "version": "npm run build && git add -A dist",
        "postversion": "git push && git push --tags"
    },
    "keywords": [
        "aws",
        "amplify",
        "deployment",
        "github",
        "mcp",
        "cursor"
    ],
    "author": "Amplify Deploy Contributors",
    "license": "MIT",
    "dependencies": {
        "@aws-sdk/client-amplify": "^3.445.0",
        "@aws-sdk/credential-providers": "^3.821.0",
        "@modelcontextprotocol/sdk": "^0.5.0",
        "@octokit/rest": "^22.0.0",
        "chalk": "^4.1.2",
        "commander": "^11.0.0",
        "dotenv": "^16.0.0",
        "express": "^4.18.0",
        "inquirer": "^8.2.0",
        "keytar": "^7.9.0",
        "node-fetch": "^2.6.7",
        "open": "^8.4.0",
        "ora": "^5.4.1",
        "simple-git": "^3.19.1",
        "ws": "^8.14.0",
        "yaml": "^2.3.0",
        "zod": "^3.25.48"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.0.0",
        "@types/node": "^20.0.0",
        "eslint": "^9.0.0",
        "jest": "^29.0.0",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/aws-deploy/aws-deploy-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/aws-deploy/aws-deploy-mcp/issues"
    },
    "homepage": "https://github.com/aws-deploy/aws-deploy-mcp#readme"
}
